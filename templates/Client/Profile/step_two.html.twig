{% extends '/Client/Profile/client_intake.html.twig' %}

{% block body %}
    <div class="row">
        <img class="img-rounded" height="60" src="{{ path('rx_file_download', {'ria_id': ria_company_information.ria.id}) }}"/>
    </div>

    <span>We'll save your progress. <a href="{{ path('logout') }}">Logout</a></span>

    <div class="row margin-top-10">
        <div class="col-12">
            <div class="alert alert-success">
                Register on our system in 3 easy steps. Logout at any point and we will save your progress automatically for when you return.
                <a class="close" data-dismiss="alert" href="#">&times;</a>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form id="msform" action="{{ path("rx_client_profile_step_two" , { 'question_nb': app.request.get('question_nb') }) }}" method="post" data-presave="true" data-save="true">
                <!-- progressbar -->
                <ul id="progressbar">
                    <li class="active">Your Information</li>
                    <li class="active">Risk Tolerance</li>
                    <li>Account Setup</li>
                </ul>
                <!-- fieldsets -->
                <fieldset>
                    <h2 class="fs-title">Your Risk Tolerance</h2>
                    <h3 class="fs-subtitle">Answer the following questions as honestly as possible. We use these to assess your risk tolerance and suggest a proper portfolio.</h3>

                    {% for key, field in form.children %}
                        {% if key != '_token' %}
                            <li style="list-style: none">{{ form_row(field) }}</li>
                        {% endif %}
                    {% endfor %}
                    <a class="btn action-button-previous" href="{{ path('rx_client_profile_step_one') }}">Back</a>
                    <input class="next action-button"  type="submit" name="Continue" value="Continue"/>
                </fieldset>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}
