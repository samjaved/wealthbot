{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}
    <link id="base-style-responsive" href="/css/theme-css/style.css" rel="stylesheet">

{% endblock %}



{% block body %}
    <div id="wrapper">
        <!-- start: RIA  nav/menu -->
        {%  block sideBarNavigation %}
        {% endblock %}
        <!-- end: RIA nav/menu -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {% include '/Client/Dashboard/topNavigation.html.twig' %}
                {% block flash_messages %}
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                {{ flashMessage }}
                                <a class="close" data-dismiss="alert" href="#">&times;</a>
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endblock %}
                    {% block mainContent %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="/js/theme-js/jquery.flot.min.js"></script>
    <script src="/js/theme-js/jquery.flot.pie.min.js"></script>
    <script src="/js/theme-js/jquery.flot.stack.js"></script>
    <script src="/js/theme-js/jquery.flot.resize.min.js"></script>
    <script src="/js/theme-js/jquery.flot.tooltip.min.js"></script>
    <script src="/js/theme-js/jquery.flot.crosshair.js"></script>
    <script src="/js/theme-js/jquery.dataTables.min.js"></script>
    {#<script src="/js/theme-js/custom.js"></script>#}
{% endblock %}